<div class="bg-black min-vh-100 py-5">
  <article class="container" style="max-width: 900px;">
    <div class="text-center mb-5">
      <span class="badge bg-primary text-black mb-3 fs-6 px-3 py-2 rounded-0">
        <%= @post.published_at&.strftime("%d %B %Y") %>
      </span>
      <h1 class="display-3 fw-bold text-white mb-4 text-uppercase"><%= @post.title %></h1>
    </div>

    <% if @post.image_url.present? %>
      <div class="overflow-hidden shadow-lg mb-5 border border-secondary">
        <img src="<%= @post.image_url %>" alt="<%= @post.title %>" class="w-100 h-auto grayscale-img">
      </div>
    <% end %>

    <div class="text-white-50 lead mb-5 fs-5">
      <%= simple_format(@post.content) %>
    </div>

    <div class="border-top border-secondary pt-4 d-flex justify-content-between align-items-center">
      <%= link_to "← BLOGA DÖN", posts_path, class: "text-primary text-decoration-none fw-bold text-uppercase" %>
      
      <div class="d-flex gap-3">
        <button class="btn btn-link text-white-50 p-0 text-decoration-none hover-white text-uppercase fw-bold">
          PAYLAŞ
        </button>
      </div>
    </div>
  </article>
</div>

<style>
  .grayscale-img {
    filter: grayscale(100%);
  }
</style>
