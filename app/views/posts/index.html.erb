<div class="bg-black py-5 min-vh-100">
  <div class="container">
    <div class="text-center mb-5">
      <h1 class="display-3 fw-bold text-white text-uppercase mb-2">Blog & Haberler</h1>
      <div class="bg-primary mx-auto" style="width: 100px; height: 4px;"></div>
    </div>
    
    <div class="row g-5">
      <% @posts.each do |post| %>
        <div class="col-md-6 col-lg-4">
          <div class="card h-100 bg-dark border-secondary text-white shadow-lg rounded-0">
            <div class="position-relative" style="height: 250px; overflow: hidden;">
              <% if post.image_url.present? %>
                <img src="<%= post.image_url %>" alt="<%= post.title %>" class="card-img-top w-100 h-100 object-fit-cover grayscale-hover transition-all">
              <% else %>
                <div class="w-100 h-100 bg-secondary d-flex align-items-center justify-content-center">
                  <span class="text-white-50">GÃ¶rsel Yok</span>
                </div>
              <% end %>
              <div class="position-absolute top-0 start-0 m-0">
                <span class="badge bg-primary text-black text-uppercase fw-bold px-3 py-2 rounded-0">Haber</span>
              </div>
            </div>
            <div class="card-body d-flex flex-column p-4 border-top border-secondary">
              <div class="text-white-50 small mb-2 font-monospace"><%= post.published_at&.strftime("%d.%m.%Y") %></div>
              <h3 class="h5 card-title fw-bold mb-3 text-uppercase"><%= post.title %></h3>
              <p class="card-text text-white-50 small mb-4 flex-grow-1"><%= truncate(post.content, length: 150) %></p>
              <%= link_to "DEVAMINI OKU", post_path(post.id), class: "text-primary text-decoration-none fw-bold d-flex align-items-center gap-2 hover-underline text-uppercase" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
  .grayscale-hover {
    filter: grayscale(100%);
    transition: all 0.5s ease;
  }
  .card:hover .grayscale-hover {
    filter: grayscale(0%);
    transform: scale(1.05);
  }
  .hover-underline:hover {
    text-decoration: underline !important;
  }
</style>
