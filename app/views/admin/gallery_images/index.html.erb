<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="h3 text-white">Galeri Görselleri</h1>
  <%= link_to "Görsel Ekle", new_admin_gallery_image_path, class: "btn btn-primary" %>
</div>

<div class="row g-4">
  <% @gallery_images.each do |image| %>
    <div class="col-md-4 col-lg-3">
      <div class="card bg-dark border-secondary shadow-sm h-100">
        <div class="position-relative" style="height: 200px; overflow: hidden;">
          <img src="<%= image.url %>" alt="<%= image.title %>" class="card-img-top w-100 h-100 object-fit-cover">
          <div class="position-absolute top-0 end-0 p-2">
            <div class="btn-group btn-group-sm">
              <%= link_to edit_admin_gallery_image_path(image.id), class: "btn btn-light btn-sm shadow-sm", title: "Düzenle" do %>
                <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path></svg>
              <% end %>
              <%= button_to admin_gallery_image_path(image.id), method: :delete, class: "btn btn-danger btn-sm shadow-sm", form: { class: "d-inline" }, form_class: "d-inline", title: "Sil", data: { turbo_confirm: "Emin misiniz?" } do %>
                <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
              <% end %>
            </div>
          </div>
        </div>
        <div class="card-body p-3">
          <h5 class="card-title h6 mb-0 text-truncate text-white" title="<%= image.title %>"><%= image.title %></h5>
        </div>
      </div>
    </div>
  <% end %>
</div>
