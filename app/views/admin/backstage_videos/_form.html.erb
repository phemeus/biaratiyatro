<%= form_with(model: [:admin, video], local: true, class: "needs-validation") do |f| %>
  <% if video.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading">Hata!</h4>
      <p><%= video.errors.count %> hata nedeniyle video kaydedilemedi:</p>
      <ul class="mb-0">
        <% video.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :title, "Başlık", class: "form-label text-white" %>
    <%= f.text_field :title, class: "form-control bg-dark text-white border-secondary focus-primary", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :youtube_url, "YouTube URL", class: "form-label text-white" %>
    <%= f.text_field :youtube_url, class: "form-control bg-dark text-white border-secondary focus-primary", required: true, placeholder: "https://www.youtube.com/watch?v=..." %>
    <div class="form-text text-white-50">YouTube video linkini buraya yapıştırın.</div>
  </div>

  <div class="mb-3">
    <%= f.label :description, "Açıklama", class: "form-label text-white" %>
    <%= f.text_area :description, rows: 3, class: "form-control bg-dark text-white border-secondary focus-primary" %>
  </div>

  <div class="d-flex justify-content-end gap-2">
    <%= link_to "İptal", admin_backstage_videos_path, class: "btn btn-outline-light" %>
    <%= f.submit "Kaydet", class: "btn btn-primary" %>
  </div>
<% end %>
