<%= form_with(model: [:admin, staff], local: true, class: "needs-validation") do |f| %>
  <% if staff.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading">Hata!</h4>
      <p><%= staff.errors.count %> hata nedeniyle kaydedilemedi:</p>
      <ul class="mb-0">
        <% staff.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :name, "İsim Soyisim", class: "form-label" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :role, "Rol / Görev", class: "form-label" %>
    <%= f.text_field :role, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :bio, "Biyografi", class: "form-label" %>
    <%= f.text_area :bio, rows: 4, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :photo_url, "Fotoğraf URL", class: "form-label" %>
    <%= f.text_field :photo_url, class: "form-control" %>
  </div>

  <div class="d-flex justify-content-end gap-2">
    <%= link_to "İptal", admin_staffs_path, class: "btn btn-outline-secondary" %>
    <%= f.submit "Kaydet", class: "btn btn-primary" %>
  </div>
<% end %>
