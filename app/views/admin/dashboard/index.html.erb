<% content_for :title, "Panel" %>

<div class="row g-4">
  <!-- Plays Card -->
  <div class="col-md-6 col-lg-3">
    <div class="card border-0 shadow-sm h-100">
      <div class="card-body d-flex align-items-center">
        <div class="flex-shrink-0 me-3">
          <div class="bg-primary bg-opacity-10 text-primary rounded p-3">
            <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
          </div>
        </div>
        <div>
          <div class="text-muted small fw-medium text-uppercase">Toplam Oyun</div>
          <div class="h3 mb-0 fw-bold text-white"><%= @plays_count %></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Staff Card -->
  <div class="col-md-6 col-lg-3">
    <div class="card border-0 shadow-sm h-100">
      <div class="card-body d-flex align-items-center">
        <div class="flex-shrink-0 me-3">
          <div class="bg-success bg-opacity-10 text-success rounded p-3">
            <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path></svg>
          </div>
        </div>
        <div>
          <div class="text-muted small fw-medium text-uppercase">Ekip Üyesi</div>
          <div class="h3 mb-0 fw-bold text-white"><%= @staff_count %></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Posts Card -->
  <div class="col-md-6 col-lg-3">
    <div class="card border-0 shadow-sm h-100">
      <div class="card-body d-flex align-items-center">
        <div class="flex-shrink-0 me-3">
          <div class="bg-warning bg-opacity-10 text-warning rounded p-3">
            <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path></svg>
          </div>
        </div>
        <div>
          <div class="text-muted small fw-medium text-uppercase">Blog Yazısı</div>
          <div class="h3 mb-0 fw-bold text-white"><%= @posts_count %></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Gallery Card -->
  <div class="col-md-6 col-lg-3">
    <div class="card border-0 shadow-sm h-100">
      <div class="card-body d-flex align-items-center">
        <div class="flex-shrink-0 me-3">
          <div class="bg-danger bg-opacity-10 text-danger rounded p-3">
            <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
          </div>
        </div>
        <div>
          <div class="text-muted small fw-medium text-uppercase">Galeri Görseli</div>
          <div class="h3 mb-0 fw-bold text-white"><%= @gallery_count %></div>
        </div>
      </div>
    </div>
  </div>
</div>
