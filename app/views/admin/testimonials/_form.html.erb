<%= form_with(model: [:admin, testimonial], local: true, class: "needs-validation") do |f| %>
  <% if testimonial.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading">Hata!</h4>
      <p><%= testimonial.errors.count %> hata nedeniyle yorum kaydedilemedi:</p>
      <ul class="mb-0">
        <% testimonial.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :name, "İsim Soyisim", class: "form-label text-white" %>
    <%= f.text_field :name, class: "form-control bg-dark text-white border-secondary focus-primary", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :title, "Ünvan / Rol (Opsiyonel)", class: "form-label text-white" %>
    <%= f.text_field :title, class: "form-control bg-dark text-white border-secondary focus-primary", placeholder: "Örn: Seyirci, Eleştirmen" %>
  </div>

  <div class="mb-3">
    <%= f.label :comment, "Yorum", class: "form-label text-white" %>
    <%= f.text_area :comment, rows: 4, class: "form-control bg-dark text-white border-secondary focus-primary", required: true %>
  </div>

  <div class="d-flex justify-content-end gap-2">
    <%= link_to "İptal", admin_testimonials_path, class: "btn btn-outline-light" %>
    <%= f.submit "Kaydet", class: "btn btn-primary" %>
  </div>
<% end %>
