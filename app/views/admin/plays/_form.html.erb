<%= form_with(model: [:admin, play], local: true, class: "needs-validation") do |f| %>
  <% if play.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading">Hata!</h4>
      <p><%= play.errors.count %> hata nedeniyle oyun kaydedilemedi:</p>
      <ul class="mb-0">
        <% play.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :title, "Başlık", class: "form-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :description, "Açıklama", class: "form-label" %>
    <%= f.text_area :description, rows: 4, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :date, "Tarih", class: "form-label" %>
    <%= f.datetime_field :date, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :image_url, "Görsel URL", class: "form-label" %>
    <%= f.text_field :image_url, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :youtube_url, "YouTube Video URL", class: "form-label" %>
    <%= f.text_field :youtube_url, class: "form-control" %>
  </div>

  <div class="d-flex justify-content-end gap-2">
    <%= link_to "İptal", admin_plays_path, class: "btn btn-outline-secondary" %>
    <%= f.submit "Kaydet", class: "btn btn-primary" %>
  </div>
<% end %>
