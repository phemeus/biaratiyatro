<%= form_with(model: [:admin, post], local: true, class: "needs-validation") do |f| %>
  <% if post.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading">Hata!</h4>
      <p><%= post.errors.count %> hata nedeniyle kaydedilemedi:</p>
      <ul class="mb-0">
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :title, "Başlık", class: "form-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :content, "İçerik", class: "form-label" %>
    <%= f.text_area :content, rows: 8, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :published_at, "Yayın Tarihi", class: "form-label" %>
    <%= f.datetime_field :published_at, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :image_url, "Görsel URL", class: "form-label" %>
    <%= f.text_field :image_url, class: "form-control" %>
  </div>

  <div class="d-flex justify-content-end gap-2">
    <%= link_to "İptal", admin_posts_path, class: "btn btn-outline-secondary" %>
    <%= f.submit "Kaydet", class: "btn btn-primary" %>
  </div>
<% end %>
