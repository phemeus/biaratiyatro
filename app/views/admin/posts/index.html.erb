<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="h3 text-white">Blog Yazıları</h1>
  <%= link_to "Yeni Yazı Ekle", new_admin_post_path, class: "btn btn-primary" %>
</div>

<div class="card bg-dark border-secondary shadow-lg">
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-dark table-hover align-middle mb-0">
        <thead>
          <tr>
            <th class="ps-4 text-white-50">Başlık</th>
            <th class="text-white-50">Yayın Tarihi</th>
            <th class="text-center pe-4 text-white-50">İşlemler</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td class="ps-4 fw-medium text-white"><%= post.title %></td>
              <td class="text-white-50"><%= post.published_at %></td>
              <td class="text-center pe-4">
                <div class="btn-group btn-group-sm">
                  <%= link_to edit_admin_post_path(post.id), class: "btn btn-outline-light", title: "Düzenle" do %>
                    <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path></svg>
                  <% end %>
                  <%= button_to admin_post_path(post.id), method: :delete, class: "btn btn-outline-danger", form: { class: "d-inline" }, form_class: "d-inline", title: "Sil", data: { turbo_confirm: "Emin misiniz?" } do %>
                    <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
