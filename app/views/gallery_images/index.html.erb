<div class="bg-black py-5 min-vh-100">
  <div class="container">
    <div class="text-center mb-5">
      <h1 class="display-3 fw-bold text-white text-uppercase mb-2">Galeri</h1>
      <div class="bg-primary mx-auto" style="width: 100px; height: 4px;"></div>
    </div>
    
    <div class="row g-4">
      <div class="row g-4 gallery" data-masonry='{"percentPosition": true }'>
      <% @images.each do |image| %>
        <div class="col-md-6 col-lg-4">
          <a href="<%= image.image_url %>" class="d-block position-relative ratio ratio-1x1 overflow-hidden shadow-lg border border-secondary group">
            <img src="<%= image.image_url %>" alt="<%= image.caption %>" class="w-100 h-100 object-fit-cover transition-transform duration-500 hover-scale">
            <div class="position-absolute bottom-0 start-0 w-100 p-3 bg-gradient-to-t from-black to-transparent opacity-0 group-hover-opacity-100 transition-opacity duration-300">
              <p class="text-white mb-0 fw-medium"><%= image.caption %></p>
            </div>
          </a>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Masonry JS -->
<script src="https://cdn.jsdelivr.net/npm/masonry-layout@4.2.2/dist/masonry.pkgd.min.js" async></script>

<style>
  .grayscale-hover {
    filter: grayscale(100%);
    transition: all 0.5s ease;
  }
  .card:hover .grayscale-hover {
    filter: grayscale(0%);
    transform: scale(1.05);
  }
</style>
